################################ -*- Ruby -*- #################################
# Common tasks
#

package = "multicolumn"

desc "Generate README.md"
task "readme" do
  sh "emacs", "-batch", "-l", "../../el2markdown/el2markdown.el",
      "../#{package}.el", \
  "-f", "el2markdown-write-readme"
end

desc "Generating html"
task "html" => ["readme"] do
  sh "Markdown.pl ../README.md > ../README.html"
end

desc "Byte compile"
task "compile" do
  sh "emacs -batch -f batch-byte-compile ../#{package}.el"
end
